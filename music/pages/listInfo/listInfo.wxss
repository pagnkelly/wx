/**index.wxss**/
.main{
    width: 100%;
    height: 100%;
}
.cell{
    width: 100%;
    height: 100rpx;
    position: relative;
    border-bottom: 1rpx solid #aaa;
}
.info{
    float: left ;
}
.id{
    float: left;
    margin-right: 20rpx;
    height: 100rpx;
    line-height: 100rpx;
}
.author{
    margin-top:20rpx; 
    font-size: 8rpx;
    color: #aaa;
}
.more{
    width: 64rpx;
    height: 64rpx;
    position: absolute;
    top: 50%;
    right: 20rpx;
    margin-top:-32rpx;

}
.banner{
    width: 100%;
    height: 500rpx;
    display: flex;
}
.banner-info{
    flex:1;
    margin-top: 100rpx;
}
.banner-info text{
    display: block;
    width: 100%;
    text-align: center;
    margin: 20rpx;
}
.banner image{
    margin-left: 50rpx;
    margin-top:100rpx;
    flex:1;
    height: 300rpx;
    background: #ddd;
}   
.playAll{
   
    border-bottom: 5px solid #aaa;
}
.playAll image{
    width: 100rpx;
    height: 100rpx;
    float: left;
    margin: 0  50rpx;
}
.playAll text{
    height: 100rpx;
    line-height: 100rpx;
    
}
.clearfix::after,.clearfix::before{
    display: table;
    clear: both;
    content: '';
}