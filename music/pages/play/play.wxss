/*play.wxss*/
page{
    height:100%;
}

.bg{
    position: fixed;
    top: 0;
    left: 0;
    right:0;
    bottom:0;
    z-index: -1000;
    background: #ccc;
    opacity: 0.2;
}
.play{
    height: 100%;
    display:-webkit-box;
    -webkit-box-orient: vertical; 
        
}
.songname{
    text-align: center;
    height: 100rpx;
    line-height: 100rpx;
}
.lyrics{
    box-flex:1;
    -webkit-box-flex:1;
    text-align: center;
    width: 100%;
}
.progress{
    height: 76rpx;
    display: flex;
}
.controls{
    height: 200rpx;
    line-height: 200rpx;
    display:flex;  
}
.btn{
    flex: 1;
    height: 150rpx;
    margin: 25rpx;
  
}

.image-wrap{
    width: 100%;
    height:100%;
}
.slider{
    flex:1;
}
.txt{
    width: 94rpx;
    height: 72rpx;
    line-height: 72rpx;
}